@page
@model CallsIndexModel
@{
    ViewData["Title"] = "Llamadas Perdidas";
}

<div class="row">
    <div class="col-12">
        <h2>
            <i class="bi bi-telephone-fill text-danger"></i>
            Llamadas Perdidas
        </h2>
        <p class="text-muted">Consulta el historial de llamadas perdidas del sistema</p>
    </div>
</div>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <strong>Error:</strong> @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.IsApiAvailable)
{
    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <strong>API no disponible</strong>
        <p class="mb-0">No se puede conectar con la API de llamadas perdidas. Verifica que esté ejecutándose en: <code>@Model.ApiBaseUrl</code></p>
    </div>
}

<!-- Estadísticas -->
@if (Model.Stats != null)
{
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-danger">
                <div class="card-body text-center">
                    <i class="bi bi-telephone-x-fill text-danger" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@Model.Stats.TotalMissedCalls</h3>
                    <p class="text-muted mb-0">Total</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-warning">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-day-fill text-warning" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@Model.Stats.TodayMissedCalls</h3>
                    <p class="text-muted mb-0">Hoy</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-info">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-week-fill text-info" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@Model.Stats.ThisWeekMissedCalls</h3>
                    <p class="text-muted mb-0">Esta Semana</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-clock-history text-primary" style="font-size: 2rem;"></i>
                    <p class="text-muted mb-1 mt-2">Última llamada</p>
                    <p class="mb-0"><small>@Model.LastCallTime</small></p>
                </div>
            </div>
        </div>
    </div>
}

<!-- Filtros -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Límite de registros</label>
                        <select name="limit" class="form-select" asp-for="Limit">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                            <option value="200">200</option>
                        </select>
                    </div>
                    
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                    </div>
                    
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="button" class="btn btn-outline-secondary w-100" onclick="window.location.reload()">
                            <i class="bi bi-arrow-clockwise"></i> Actualizar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Tabla de llamadas perdidas -->
@if (Model.MissedCalls != null && Model.MissedCalls.Any())
{
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <span>
                        <i class="bi bi-list-ul"></i>
                        Mostrando @Model.MissedCalls.Count llamadas perdidas
                    </span>
                    <a asp-page="/Messages/Reply" class="btn btn-light btn-sm">
                        <i class="bi bi-send-fill"></i> Enviar SMS
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Fecha y Hora</th>
                                    <th>Número de Teléfono</th>
                                    <th>Estado</th>
                                    <th>¿Volvió a llamar?</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var call in Model.MissedCalls)
                                {
                                    <tr>
                                        <td>
                                            <code class="text-muted">#@call.Id</code>
                                        </td>
                                        <td>
                                            <div title="@call.DateAndTime.ToString("yyyy-MM-dd HH:mm:ss")">
                                                <strong>@call.DateAndTime.ToString("dd/MM/yyyy")</strong>
                                                <br />
                                                <small class="text-muted">@call.DateAndTime.ToString("HH:mm:ss")</small>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="phone-number">
                                                <i class="bi bi-telephone-fill text-muted"></i>
                                                @call.PhoneNumber
                                            </span>
                                        </td>
                                        <td>
                                            @if (call.Status == 0)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-telephone-x-fill"></i> Perdida
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-telephone-check-fill"></i> Respondida
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            @if (call.ClientCalledAgain.HasValue && call.ClientCalledAgain.Value != 0)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle-fill"></i> Sí
                                                </span>
                                            }
                                            else if (call.ClientCalledAgain.HasValue && call.ClientCalledAgain.Value == 0)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle-fill"></i> No
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-question-circle-fill"></i> N/A
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a asp-page="/Messages/Reply" 
                                               asp-route-to="@call.PhoneNumber" 
                                               class="btn btn-sm btn-outline-primary"
                                               title="Enviar SMS a este número">
                                                <i class="bi bi-send-fill"></i> SMS
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (Model.MissedCalls != null)
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle-fill"></i>
        <strong>No hay llamadas perdidas.</strong>
        <p class="mb-0">No se encontraron llamadas perdidas en el sistema.</p>
    </div>
}

@section Scripts {
    <script>
        // Auto-refresh cada 30 segundos (opcional)
        // setTimeout(() => window.location.reload(), 30000);
    </script>
}

